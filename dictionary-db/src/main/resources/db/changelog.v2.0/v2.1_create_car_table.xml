<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_car_table" author="Komarov_Sergey">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cars"/>
            </not>
        </preConditions>

        <createTable tableName="cars">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="manufacturer" type="varchar(300)"/>
            <column name="model" type="varchar(300)"/>
            <column name="engine_id" type="bigint">
                <constraints foreignKeyName="fk_cars_engines"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>